<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SpotlightGallery.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpotlightGallery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 壁纸展示区域 -->
        <Border
            Grid.Row="0"
            Margin="0,0,0,12"
            CornerRadius="8"
            BorderThickness="1">
            <Grid>
                <Viewbox Stretch="Uniform">
                    <Grid Width="16"
                            Height="9">
                        <Image
                            x:Name="WallpaperImage"
                            Source="{x:Bind ViewModel.WallpaperImage, Mode=OneWay}"
                            Stretch="UniformToFill"/>
                    </Grid>
                </Viewbox>

                <Rectangle
                    Fill="{ThemeResource SystemControlBackgroundBaseMediumBrush}"
                    Opacity="0.7"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"/>

                <!-- 加载圈 -->
                <ProgressRing
                    IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                    Width="50"
                    Height="50"
                    Visibility="{x:Bind ViewModel.IsLoading, Mode=OneWay}"/>
            </Grid>
        </Border>

        <!-- 底部信息展示区域 -->
        <Grid Grid.Row="1"
                Margin="4,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 左侧文字信息 -->
            <StackPanel Grid.Column="0"
                    VerticalAlignment="Center">
                <TextBlock
                    x:Name="WallpaperTitle"
                    Text="{x:Bind ViewModel.WallpaperTitle, Mode=OneWay}"
                    FontSize="18"
                    FontWeight="SemiBold"
                    TextWrapping="Wrap"/>
                <TextBlock
                    x:Name="WallpaperLocation"
                    Text="{x:Bind ViewModel.WallpaperDescription, Mode=OneWay}"
                    FontSize="12"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumHighBrush}"
                    TextWrapping="Wrap"
                    Margin="0,2,0,0"/>
                <TextBlock
                    x:Name="WallpaperCopyright"
                    Text="{x:Bind ViewModel.WallpaperCopyright, Mode=OneWay}"
                    FontSize="12"
                    Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                    TextWrapping="Wrap"
                    Margin="0,4,0,0"/>
            </StackPanel>

            <!-- 右侧按钮 -->
            <Button
                Grid.Column="1"
                x:Name="NextImageButton"
                x:Uid="NextImageButton"
                Command="{x:Bind ViewModel.NextImageCommand}"
                IsEnabled="{x:Bind ViewModel.IsLoading, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"
                VerticalAlignment="Center"
                Margin="16,0,0,0"/>
            <Button
                Grid.Column="2"
                x:Name="ApplyButton"
                x:Uid="ApplyButton"
                Style="{ThemeResource AccentButtonStyle}"
                VerticalAlignment="Center"
                Margin="16,0,0,0"/>
        </Grid>
    </Grid>
</Page>
