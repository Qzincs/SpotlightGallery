<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="SpotlightGallery.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SpotlightGallery.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    NavigationCacheMode="Enabled">
    <Page.Resources>
        <!--  These styles can be referenced to create a consistent SettingsPage layout  -->
        <!--  Reference SettingsExpander Page in Windows Community Toolkit Gallery for the full sample  -->

        <!--  Spacing between cards  -->
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <!--  Style (inc. the correct spacing) of a section header  -->
        <Style
            x:Key="SettingsSectionHeaderTextBlockStyle"
            BasedOn="{StaticResource BodyStrongTextBlockStyle}"
            TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin"
                        Value="1,30,0,6"/>
            </Style.Setters>
        </Style>
    </Page.Resources>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock
            x:Name="SettingsPageHeader"
            x:Uid="SettingsPageHeader"
            Margin="36,24,36,0"
            Style="{StaticResource TitleTextBlockStyle}"/>
        <ScrollView
            Grid.Row="1"
            Padding="36,0,36,24"
            VerticalScrollBarVisibility="Auto"
            VerticalScrollMode="Auto">
            <Border>
                <StackPanel Spacing="{StaticResource SettingsCardSpacing}">
                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                               x:Uid="Features"/>
                    <toolkit:SettingsCard x:Uid="WallpaperSource">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE8B9;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem x:Uid="WindowsSpotlight"/>
                            <ComboBoxItem x:Uid="Bing"/>
                        </ComboBox>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsCard x:Uid="ImageResolution">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE799;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem Content="3840×2160"/>
                            <ComboBoxItem Content="1920×1080"/>
                        </ComboBox>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsExpander x:Uid="AutoUpdate">
                        <toolkit:SettingsExpander.HeaderIcon>
                            <FontIcon Glyph="&#xE895;" />
                        </toolkit:SettingsExpander.HeaderIcon>
                        <ToggleSwitch/>
                        <toolkit:SettingsExpander.Items>
                            <toolkit:SettingsCard x:Uid="UpdateMode">
                                <ComboBox SelectedIndex="0">
                                    <ComboBoxItem x:Uid="Daily"/>
                                    <ComboBoxItem x:Uid="Every12Hours"/>
                                    <ComboBoxItem x:Uid="AtSpecificTime"/>
                                </ComboBox>
                            </toolkit:SettingsCard>
                            <toolkit:SettingsCard x:Uid="UpdateTime"
                                                  Visibility="Visible">
                                <TimePicker/>
                            </toolkit:SettingsCard>
                        </toolkit:SettingsExpander.Items>
                    </toolkit:SettingsExpander>
                    <toolkit:SettingsExpander x:Uid="AutoSave">
                        <toolkit:SettingsExpander.HeaderIcon>
                            <FontIcon Glyph="&#xE74E;" />
                        </toolkit:SettingsExpander.HeaderIcon>
                        <ToggleSwitch/>
                        <toolkit:SettingsExpander.Items>
                            <toolkit:SettingsCard Header="C:\User\Pictures\SpotlightGallery">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button Grid.Column="0"
                                            Margin="0,0,8,0"
                                            x:Uid="OpenFolder"/>
                                    <Button Grid.Column="1"
                                            x:Uid="Change"/>
                                </Grid>
                            </toolkit:SettingsCard>
                            <toolkit:SettingsCard x:Uid="MaxStorage">
                                <ComboBox SelectedIndex="0">
                                    <ComboBoxItem Content="100MB"/>
                                    <ComboBoxItem Content="200MB"/>
                                    <ComboBoxItem Content="500MB"/>
                                    <ComboBoxItem x:Uid="Unlimited"/>
                                </ComboBox>
                            </toolkit:SettingsCard>
                        </toolkit:SettingsExpander.Items>

                    </toolkit:SettingsExpander>

                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                               x:Uid="Appearance"/>
                    <toolkit:SettingsCard x:Uid="AppTheme">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE790;"/>
                        </toolkit:SettingsCard.HeaderIcon>
                        <ComboBox
                            x:Name="themeMode" SelectedIndex="{x:Bind ViewModel.AppThemeIndex, Mode=TwoWay}">
                            <ComboBoxItem x:Uid="LightTheme"
                                          Tag="Light"/>
                            <ComboBoxItem x:Uid="DarkTheme"
                                          Tag="Dark"/>
                            <ComboBoxItem x:Uid="UseSystemSetting"
                                          Tag="System"/>
                        </ComboBox>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsCard x:Uid="DisplayLanguage">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE774;"/>
                        </toolkit:SettingsCard.HeaderIcon>
                        <ComboBox SelectedIndex="0">
                            <ComboBoxItem x:Uid="Chinese"/>
                            <ComboBoxItem x:Uid="English"/>
                        </ComboBox>
                    </toolkit:SettingsCard>

                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}"
                               x:Uid="About"/>
                    <toolkit:SettingsCard x:Uid="AppDescription"
                                              Header="Spotlight Gallery">
                        <toolkit:SettingsCard.HeaderIcon>
                            <ImageIcon Source="/Assets/AppLogo.png" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <TextBlock IsTextSelectionEnabled="True"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}" Text="0.1.0"/>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsCard x:Uid="OpenSource">
                        <toolkit:SettingsCard.HeaderIcon>
                            <ImageIcon Source="ms-appx:///Assets/github.svg" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <HyperlinkButton Grid.Column="0"
                             x:Uid="ProjectHome"
                             NavigateUri="https://github.com/Qzincs/SpotlightGallery"/>
                            <HyperlinkButton Grid.Column="1"
                             x:Uid="License"
                             NavigateUri="https://github.com/Qzincs/SpotlightGallery/blob/main/LICENSE"/>
                            <HyperlinkButton Grid.Column="2"
                             x:Uid="Feedback"
                             NavigateUri="https://github.com/Qzincs/SpotlightGallery/issues"/>
                        </Grid>
                    </toolkit:SettingsCard>
                    <toolkit:SettingsCard x:Uid="CopyrightNotice">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE946;" />
                        </toolkit:SettingsCard.HeaderIcon>
                    </toolkit:SettingsCard>
                </StackPanel>
            </Border>
        </ScrollView>
    </Grid>
</Page>
